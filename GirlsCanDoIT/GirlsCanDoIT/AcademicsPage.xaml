<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:GirlsCanDoIT"
             mc:Ignorable="d"
             x:Class="GirlsCanDoIT.AcademicsPage"
             BackgroundImageSource="{local:ImageResourceExtention GirlsCanDoIT.Images.bg2.jpg}">
    
    <ContentPage.Content>
        <ScrollView>

            <StackLayout Margin="20">
                <StackLayout>
                    
                </StackLayout>
                <Image Source="{local:ImageResourceExtention GirlsCanDoIT.Images.book.png}"
                       HeightRequest="100"
                       Margin="10"/>

                <Label Text="Academics" 
                       TextColor="White"
                       HorizontalOptions="Center" 
                       FontSize="Large"
                       FontAttributes="Bold"
                       Margin="0,0,0,50"/>

                <Label Text="Each state has educational opportunities for you to jump start your career in the technology field.&#x0a;Just select a state you would like to learn more about!" 
                       TextColor="White"
                       FontSize="25"
                       FontAttributes="Bold" 
                       HorizontalTextAlignment="Center"/>

                <Picker x:Name="statePicker"
                        Title="Select a State"
                        FontSize="20"
                        Margin="110,30,100,0"
                        BackgroundColor="white"
                        SelectedIndexChanged="statePicker_SelectedIndexChanged"/>

                <Button Text="Learn More"
                        VerticalOptions="CenterAndExpand"
                        HorizontalOptions="Center"
                        Margin="30"
                        CornerRadius="15"
                        WidthRequest="120"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
